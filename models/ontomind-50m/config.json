  "pad_token_id": 0,
  "bos_token_id": 2,
  "eos_token_id": 3,
  "license": "GPL-3.0-only",
  "allowed_usage": [
    "src/perception/llm_perception_expander.py"
  ],
  "forbidden_usage": [
    "прямая генерация текста",
    "fine-tuning на пользовательских данных",
    "интеграция в не-GPL системы",
    "извлечение эмбеддингов вне onto16"
  ],
  "ontological_constraints": {
    "output_must_be_mapped_to_onto16": true,
    "must_pass_through_validator": true,
    "cannot_emit_without_onto144_profile": true,
    "no_emergent_behavior": true,
    "requires_vma_signature": true,
    "must_use_dynamic_tokenizer": true
  },
  "training_sources": [
    "data/incubation/ugm/",
    "data/incubation/lec/",
    "data/incubation/sub_duo/",
    "data/incubation/grigio/",
    "data/corpus/physical/",
    "data/corpus/biological/",
    "data/corpus/psychic/",
    "data/corpus/abstract/"
  ],
  "ethical_guardrails": {
    "high_stakes_contexts": ["medical", "legal", "biometric", "organ_trade"],
    "requires_causal_logging": true,
    "prohibits_anonymous_operation": true
  },
  "technical_integrity": {
    "checksum_weights": "sha256:...",
    "requires_license_guard": true,
    "hardware_binding_allowed": false
  }
}